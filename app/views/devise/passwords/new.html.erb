<h2 class="text-center" style="color: white;">Forgot your password?</h2>

<div class="mx-auto align-content-center" style="color: white; width: 400px;"> 
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <div class="row">
      <div class="col text-center">
        <%= f.submit "Send me reset password instructions", class: "btn btn-light btn-sm" %><br><br>
        <a class="text-center" href="/users/sign_in" style="color: white;">Back to Login</a>
      </div>
    </div>
  <% end %>
</div>
